{% macro projectCard(
  title = false,
  featuredImage = false,
  featuredImageAlt = '',
  url = false,
  description = false,
  stack
) %}
  <article class="[ flex-column ] [ bg-white text-dark border-primary h-100 ]">
    <figure class="border-bottom-primary">
      <img
        src="{{ featuredImage | url }}"
        alt="{{ featuredImageAlt }}"
        width="100%"
        height="auto"
        loading="lazy"
      >
    </figure>
    <div class="[ flex-column ] [ padding-xs gap-xs flex-grow ]">
      <h3 class="project-card__title">
        <a class="text-inherit" href="{{ url | url }}" aria-label="Learn more about {{ title }}">
          {{ title }}
        </a>
      </h3>
      <p class="fs-xs flex-grow">{{ description }}</p>
      <p class="fs-xxs">
        <strong>Stack: </strong> {{ stack | joiner(', ') }}
      </p>
    </div>
  </article>
{% endmacro %}