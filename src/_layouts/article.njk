---
layout: "base.njk"
---

<article class="[ wrapper content ] [ bg-white padding-sm padding-block-xs ]">
  <header class="[ flex-column ] [ gap-xs grid-column-2 ]">
    <div>
      <h1>{{ title }}</h1>
      <p>
        <em class="fs-xs">{{ description }}</em>
      </p>
    </div>
    <div class="flex-row flex-wrap gap-xs">
      <p class="fs-xxs">
        {{ 'article.publishedOn' | i18n }}
        <time date="{{ date }}">{{ date | formatDateYYYYMMDD }}</time>
      </p>
      <p class="fs-xxs">
        <span>{% include "icons/small/tag.svg" %} </span>
        {# {{ tags | turnAnchorTag | joiner(', ') | safe }} #}
        {% for tag in tags %}
          <a>{{ tag }}</a>
        {% endfor %}
      </p>
    </div>
  </header>
  <hr class="grid-column-2">
  <main class="[ article ] [ flex-column ] [ grid-column-2 fs-xs gap-xxs ]">
    {{ content | safe }}
  </main>
  <hr class="grid-column-2 mb-lg">
  <footer class="[ flex-column ] [ fs-xxs gap-xxs grid-column-2 ]">
    <p>{{ 'article.thanks' | i18n }}

    <p>
      {{ 'common.encourageContribution1' | i18n }}
      <a
        class="text-inherit"
        href="https://github.com/Guirdo/website/tree/main/{{ page.inputPath }}"
      >
        {% include "icons/small/github.svg" %}
        {{ 'common.encourageContribution2' | i18n }}
      </a>
    </p>
  </footer>
</article>