---
layout: "base.njk"
---

<article class="[ wrapper content ] [ bg-white padding-sm padding-block-xs ]">
  <header class="[ flex-column ] [ gap-xs grid-column-2 ]">
    <figure class="w-100">
      <img
        class="border-primary"
        src="{{ featuredImage | url }}"
        alt="Screenshot of {{ title }}"
        width="100%"
        height="auto"
      >
    </figure>
    <div class="flex-column gap-xxs">
      <h1>{{ title }}</h1>
      <p class="fs-sm">
        <em>{{ description }}</em>
      </p>
      <p class="fs-sm">
        <small>
          <b>Stack:
          </b>
          {{ stack | joiner(', ') }}
        </small>
      </p>
      <div class="flex-row gap-xs flex-wrap">
        {% if repoUrl %}
          <a
            class="fs-xs text-inherit align-items-center" 
            href="{{ repoUrl | url }}" 
            target="_blank"
            aria-label="{{ 'project.checkCodeAria' | i18n({ project: title }) }}"
          >
            {% include "icons/small/github.svg" %} {{ 'project.checkCode' | i18n }}
          </a>
        {% endif %}
        {% if demoUrl %}
          <a
            class="fs-xs text-inherit" 
            href="{{ demoUrl | url }}" 
            target="_blank"
            aria-label="{{ 'project.onlineDemoAria' | i18n({ project: title }) }}"
          >
            {% include "icons/small/internet.svg" %} {{ 'project.onlineDemo' | i18n }}
          </a>
        {% endif %}
      </div>
    </div>
    <div class="flex-row flex-wrap gap-xs">
      <p class="fs-xxs">
        {{ 'project.createdOn' | i18n }}
        <time date="{{ date }}">{{ date | formatDateYYYYMMDD }}</time>
      </p>
      <p class="fs-xxs">
        <span>{% include "icons/small/tag.svg" %}</span>
        <span>{{ tags | joiner(', ') }}</span>
      </p>
    </div>
  </header>
  <hr class="grid-column-2">
  <main class="[ article ] [ flex-column ] [ fs-sm gap-xxs grid-column-2 ]">
    {{ content | safe }}
  </main>
  <hr class="grid-column-2">
  <footer class="grid-column-2">
    {% block references %}{% endblock %}
    <p class="fs-xs">
      {{ 'common.encourageContribution1' | i18n }}
      <a
        class="text-inherit"
        href="https://github.com/Guirdo/website/tree/main/{{ page.inputPath }}"
      >
        {% include "icons/small/github.svg" %}
        {{ 'common.encourageContribution2' | i18n }}
      </a>
    </p>
  </footer>
</article>